<div class="container">
  <div class="row">
     <% @articles.each do |article| %>
     <div class="col-md-3 margin-top">
     <%= link_to article do %>
     <div>
       <%= image_tag "main.jpg", class: 'img-responsive' %>
       <p class="title"><%= article.title %></p>
     </div>
     <% end %>
     <%= article.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
</div>
 <% end %>
  </div>
 <div class="row">
     <%= link_to "新規登録", new_article_path, class: "margin-top btn btn-primary" %>
 </div>
</div>
